@model IEnumerable<StudentCourseResponse>


<div class="container">
    <section class="d-flex flex-column align-items-start gap-3 mt-4" style="width: 100%; height:215px;">

        @* <div class="d-flex flex-row gap-2" style="width: 180px; height:24px;">
        <img src="https://res.cloudinary.com/drixwe3ie/image/upload/v1678811267/Vector_xwqhnd.png" style="width: 18px; height:18px;"/>
        </div>*@
        <div class="d-flex flex-column justify-content-center align-items-center " style="width:100%; height:210px; background-image: url('@Url.Content("~/images/Rectangle 23.jpg")'); background-repeat: no-repeat; background-size: cover;">
            <div class="d-flex flex-column justify-content-center align-items-center" style="width: 653px; height: 83px;">
                <div style="width: 750px; height: 38px; font-style: normal; font-weight: 700; font-size: 32px; line-height: 140%;letter-spacing: 0.25px; text-align: center; color: #101010;">
                    My Courses
                </div>

            </div>
        </div>
    </section>

    <section class="d-flex flex-row align-items-start justify-content-between" style="width:100%; height:24px; margin-top: 40px;">
        <div style="width:346px; height:22px; font-style:normal; font-size:16px; font-weight:400; line-height:22px">
            This shows all ongoing & completed courses
        </div>
    </section>

    @if(!Model.Any())
    {
        <h4 class="">
            You have Registered for any courses yet
        </h4>
    }

    <section class="d-flex flex-column align-items-center justify-content-between" style="width: 100%; margin-top: 20px;">

        @foreach (var c in Model)
        {
            <a class="d-block w-100 mb-4 text-dark" asp-controller="Course" asp-action="Details" asp-route-id="@c.CourseId">
                <div class="d-flex flex-row align-items-center mb-4" style="padding: 32px; gap: 32px; width: 100%; height: 255px; background: #FFFFFF; border-radius: 16px;">
                                <div style="height: 200px; border-radius: 8px; background: white">
                                    <img src="@c.CourseImageUrl" class="img-fluid card-img-top bd-placeholder h-100 thumbnail" />
                                </div>
                                <div class="d-flex flex-column align-items-start" style="gap: 16px; width: 100%;">
                                    <div style=" font-style: normal; font-weight: 700; font-size: 24px; line-height: 140%; color: #101828;">
                                        @c.CourseName
                                    </div>
                                    <div style="font-style:normal; font-weight: 400; font-size: 16px; line-height:22.4px; width:89px; height:22px">
                                        <div style="width:200px">
                                            <i class="fas fa-clock"></i>
                                            @{
                                                string time = $"{c.Duration / 60}h:{c.Duration % 60}minutes";
                                            }
                                            @time
                                        </div>
                                    </div>
                                    <div style="font-style:normal; font-weight:400; font-size:16px; line-height:22.4px; width: 84px; height:22px">
                                        @c.ContentCount Courses
                                    </div>
                                    <div style="font-style:normal; font-weight:400; font-size:16px; line-height:22.4px; width: 65px; color: #FEC84B; height:22px">
                                        Ongoing
                                    </div>
                                </div>
                            </div>
            </a>
        }

    </section>

</div>